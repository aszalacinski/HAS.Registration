@page
@model HAS.Registration.ProfileDetailsModel
@{
    ViewData["Title"] = "Set your Profile Details";
}
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post" class="form-horizontal" role="form">

                <h4>Verify your Profile Details</h4>
                <small>Make sure you profile details are set as you want them to appear on the site to other users.</small>
                
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Data.Email" class="col-md-4 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Data.Email" class="form-control" />
                        <span asp-validation-for="Data.Email" class="text-danger"></span>
                    </div>
                </div>
                

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <button type="submit" class="btn btn-primary">Continue</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
